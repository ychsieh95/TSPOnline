@page
@model TSPOnline.Pages.Ores.IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "礦怪";
}

<div class="container">
    <div asp-validation-summary="All" class="my-3"></div>
    <div class="card my-3">
        <h5 class="mb-0">
            <button class="btn btn-link" data-toggle="collapse" data-target="#attr-collapse">
                屬性快搜
            </button>
        </h5>
        <div class="collapse" id="attr-collapse">
            <div class="card-body">
                <a asp-route-Attribute="地"><img src="~/images/icons/earth-general.gif" /></a>
                <a asp-route-Attribute="火"><img src="~/images/icons/fire-general.gif" /></a>
                <a asp-route-Attribute="水"><img src="~/images/icons/water-general.gif" /></a>
                <a asp-route-Attribute="風"><img src="~/images/icons/wind-general.gif" /></a>
            </div>
        </div>
    </div>
    <div class="card my-3">
        <h5 class="mb-0">
            <button class="btn btn-link" data-toggle="collapse" data-target="#search-collapse">
                礦怪快搜
            </button>
        </h5>
        <div class="collapse" id="search-collapse">
            <div class="card-body">
                <div class="form-horizontal">
                    <form method="get" class="my-3">
                        <div class="form-group row">
                            <label class="col-2 col-form-label text-right">最低等級</label>
                            <div class="col-10">
                                <input asp-for="MinLevel" type="number" class="form-control" value="0" min="0" max="600" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-2 col-form-label text-right">最高等級</label>
                            <div class="col-10">
                                <input asp-for="MaxLevel" type="number" class="form-control" value="600" min="0" max="600" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-2 col-form-label text-right">名稱</label>
                            <div class="col-10">
                                <input asp-for="Name" type="text" class="form-control" placeholder="礦怪名稱" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-2 col-form-label text-right">屬性</label>
                            <div class="col-10">
                                <select asp-for="Attribute" asp-items="@Model.Attributes" class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-2 col-form-label text-right">地區／礦坑名稱</label>
                            <div class="col-10">
                                <input asp-for="Location" type="text" class="form-control" placeholder="地區／礦坑名稱" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-2 col-form-label text-right">掉落物品</label>
                            <div class="col-10">
                                <input asp-for="Items" type="text" class="form-control" placeholder="掉落物品" />
                            </div>
                        </div>
                        <div class="text-right">
                            <input type="submit" class="btn btn-primary" value="搜尋" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="d-none d-sm-block">
        <table class="table table-bordered table-striped">
            <thead>
                <tr class="table-info text-center">
                    <th>等級</th>
                    <th>名稱</th>
                    <th>屬性</th>
                    <th class="text-left">地區─礦坑名稱</th>
                    <th class="text-left">掉落物品</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ore in Model.Ores)
                {
                    <tr class="text-center">
                        <td>@ore.LV</td>
                        <td style="white-space: nowrap;">@ore.Name</td>
                        <td>@ore.Attribute</td>
                        <td class="text-left">@ore.Location</td>
                        <td class="text-left">@ore.Items</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="d-sm-none">
        <table class="table table-bordered table-striped">
            <thead>
                <tr class="table-info text-center">
                    <th>等級</th>
                    <th>名稱</th>
                    <th>屬性</th>
                    <th class="text-left">地區</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ore in Model.Ores)
                {
                    <tr class="text-center">
                        <td>@ore.LV</td>
                        <td style="white-space: nowrap;">@ore.Name</td>
                        <td>@ore.Attribute</td>
                        <td class="text-left">@ore.Location</td>
                        <td><a class="alert-anchor" href="#"
                               onclick="alert('掉落物品：@ore.Items')"><i class="fas fa-info-circle fa-fw"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>