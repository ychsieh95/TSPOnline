@page
@model TSPOnline.Pages.Missions.IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "任務";
}

@section styles {
    <link rel="stylesheet" href="~/lib/table-col-width/css/col-width.min.css" type="text/css" />
}

<div class="container">
    <div asp-validation-summary="All" class="my-3"></div>
    <div class="card my-3">
        <h5 class="mb-0">
            <button class="btn btn-link" data-toggle="collapse" data-target="#type-collapse">
                類別快搜
            </button>
        </h5>
        <div class="collapse" id="type-collapse">
            <div class="card-body">
                <a asp-route-Items="心技能">心技能</a>、
                <a asp-route-Remark="巨獸">巨獸</a>、
                <a asp-route-Items="召喚">召喚</a>、
                <a asp-route-Items="鉛錘">鉛錘</a>、
                <a asp-route-Items="名駒">名駒</a>、
                <a asp-route-Items="駿馬">駿馬</a>、
                <a asp-route-Items="經驗值">經驗值</a>、
                <a asp-route-Items="屬性裝">屬性裝</a>、
                <a asp-route-Remark="96轉生專用裝">96轉生專用裝</a>、
                <a asp-route-Remark="一轉任務">一轉任務</a>、
                <a asp-route-Remark="二轉霸王">二轉霸王</a>、
                <a asp-route-Remark="二轉賢士">二轉賢士</a>、
                <a asp-route-Remark="二轉俠客">二轉俠客</a>、
                <a asp-route-Remark="二轉嫡仙">二轉嫡仙</a>、
                <a asp-route-Remark="三轉任務">三轉任務</a>、
                <a asp-route-Items="太上仙丹">太上仙丹</a>
            </div>
        </div>
    </div>
    <div class="card my-3">
        <h5 class="mb-0">
            <button class="btn btn-link" data-toggle="collapse" data-target="#search-collapse">
                任務快搜
            </button>
        </h5>
        <div class="collapse" id="search-collapse">
            <div class="card-body">
                <div class="form-horizontal">
                    <form method="get" class="my-3">
                        <div class="form-group row">
                            <label class="col-2 col-form-label text-right">任務名稱</label>
                            <div class="col-10">
                                <input asp-for="Name" type="text" class="form-control" placeholder="任務名稱" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-2 col-form-label text-right">地區</label>
                            <div class="col-10">
                                <input asp-for="Location" type="text" class="form-control" placeholder="任務地區" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-2 col-form-label text-right">任務條件</label>
                            <div class="col-10">
                                <input asp-for="Conditions" type="text" class="form-control" placeholder="任務條件" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-2 col-form-label text-right">任務流程／出現武將</label>
                            <div class="col-10">
                                <input asp-for="Steps" type="text" class="form-control" placeholder="任務流程／出現武將" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-2 col-form-label text-right">所得物品</label>
                            <div class="col-10">
                                <input asp-for="Items" type="text" class="form-control" placeholder="所得物品" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-2 col-form-label text-right">備註</label>
                            <div class="col-10">
                                <input asp-for="Remark" type="text" class="form-control" placeholder="備註" />
                            </div>
                        </div>
                        <div class="text-right">
                            <input type="submit" class="btn btn-primary" value="搜尋" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var mission in Model.Missions)
        {
            if (mission != Model.Missions.First())
            {
                <div class="col-12 mt-3"></div>
            }
            <div class="col-12">
                <div class="card border-info">
                    <h5 class="card-header bg-info text-white">@mission.Name</h5>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td class="td-col-1 text-right">地區</td>
                                    <td class="td-col-9 text-left">@mission.Location</td>
                                </tr>
                                <tr>
                                    <td class="td-col-1 text-right">任務條件</td>
                                    <td class="td-col-9 text-left">@mission.Conditions</td>
                                </tr>
                                <tr>
                                    <td class="td-col-1 text-right">任務流程</td>
                                    <td class="td-col-9 text-left">@(new HtmlString(mission.Steps))</td>
                                </tr>
                                <tr>
                                    <td class="td-col-1 text-right">所得物品</td>
                                    <td class="td-col-9 text-left">@(new HtmlString(mission.Items))</td>
                                </tr>
                                <tr>
                                    <td class="td-col-1 text-right">備註</td>
                                    <td class="td-col-9 text-left">@(new HtmlString(mission.Remark))</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>